import React from "react";

// 🧭 约定：
// 绿灯 = 对 TLT 有利（长端利率下行压力）
// 红灯 = 对 TLT 不利（长端利率上行压力）

const data = {
  snapshotDate: "2025-08-25",
  // 关键锚（示例硬编码）
  anchors: {
    y20Nominal: 4.86, // 20年期名义利率（%）
    y20TIPS: 2.35, // 20年期实际利率（%）
    breakeven20y: 2.51, // 隐含通胀补偿（%）
  },
  modules: [
    {
      key: "policyPath",
      title: "短端利率预期（政策路径）",
      light: "green",
      bullets: [
        "联邦基金期货隐含未来12个月下行（温和）",
        "点阵图显示长期利率约 ~3% 附近",
      ],
      metrics: [
        { label: "未来12个月短端均值(估)", value: "~3.2–3.4%" },
        { label: "方向", value: "对长端下压 → 绿灯" },
      ],
    },
    {
      key: "inflation",
      title: "通胀补偿（预期通胀）",
      light: "red",
      bullets: [
        "PCE/CPI 回落有限，通胀预期黏性",
        "20Y breakeven ~2.5% 上方徘徊",
      ],
      metrics: [
        { label: "20Y 隐含通胀", value: "~2.5%" },
        { label: "方向", value: "对长端上推 → 红灯" },
      ],
    },
    {
      key: "termPremium",
      title: "期限溢价（不确定性/波动/财政）",
      light: "red",
      bullets: [
        "期限溢价回正且偏高（相较疫情后）",
        "利率波动不低，QT仍在进行",
      ],
      metrics: [
        { label: "ACM 期限溢价(10Y 参考)", value: "~0.5–0.8%" },
        { label: "方向", value: "对长端上推 → 红灯" },
      ],
    },
    {
      key: "supplyDemand",
      title: "供需/资金偏好（QRA/TIC/买回）",
      light: "red",
      bullets: [
        "名义券供给高位稳定，QT叠加",
        "买回与外资需求对冲部分压力",
      ],
      metrics: [
        { label: "20Y 拍卖规模(参考)", value: "$13–16bn/期" },
        { label: "方向", value: "净效应偏上推 → 红灯" },
      ],
    },
  ],
};

function Light({ color }: { color: "red" | "green" }) {
  const bg = color === "red" ? "bg-red-500" : "bg-green-500";
  const glow = color === "red" ? "shadow-red-500/50" : "shadow-green-500/50";
  const label = color === "red" ? "红灯" : "绿灯";
  return (
    <div className="flex items-center gap-3">
      <div
        className={`w-4 h-4 rounded-full ${bg} shadow-[0_0_12px_4px] ${glow}`}
        aria-label={label}
      />
      <span className="text-sm font-semibold text-gray-700 dark:text-gray-200">{label}</span>
    </div>
  );
}

function Card({
  title,
  light,
  bullets,
  metrics,
}: {
  title: string;
  light: "red" | "green";
  bullets: string[];
  metrics: { label: string; value: string }[];
}) {
  return (
    <div className="rounded-2xl border border-gray-200 dark:border-gray-800 p-5 bg-white/80 dark:bg-zinc-900/80 backdrop-blur shadow-sm hover:shadow-md transition-shadow">
      <div className="flex items-center justify-between mb-3">
        <h3 className="text-lg font-bold text-gray-900 dark:text-gray-100">{title}</h3>
        <Light color={light} />
      </div>
      <ul className="space-y-2 mb-4">
        {bullets.map((b, i) => (
          <li key={i} className="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">• {b}</li>
        ))}
      </ul>
      <div className="grid grid-cols-1 sm:grid-cols-2 gap-3">
        {metrics.map((m, i) => (
          <div key={i} className="rounded-xl bg-gray-50 dark:bg-zinc-800 p-3">
            <div className="text-xs text-gray-500 dark:text-gray-400">{m.label}</div>
            <div className="text-base font-semibold text-gray-900 dark:text-gray-100">{m.value}</div>
          </div>
        ))}
      </div>
    </div>
  );
}

function SummaryBar() {
  const reds = data.modules.filter(m => m.light === "red").length;
  const greens = data.modules.filter(m => m.light === "green").length;
  const verdict = reds > greens ? "TLT趋势：偏弱（不利）" : greens > reds ? "TLT趋势：偏强（有利）" : "TLT趋势：中性";
  const desc =
    reds > greens
      ? "多数因子对长端利率构成上行压力：通胀补偿黏性 + 期限溢价偏高 + 供给高位。"
      : greens > reds
      ? "多数因子对长端利率构成下行压力：政策路径下压明显、通胀/溢价/供给配合。"
      : "多空因素相抵，观望为宜。";

  return (
    <div className="rounded-2xl border border-gray-200 dark:border-gray-800 p-5 bg-gradient-to-r from-white via-green-50/40 to-white dark:from-zinc-900 dark:via-zinc-800 dark:to-zinc-900 shadow-sm">
      <div className="flex items-center justify-between">
        <div>
          <div className="text-sm text-gray-500 dark:text-gray-400">综合结论（{data.snapshotDate}）</div>
          <div className="text-2xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100">{verdict}</div>
          <div className="mt-1 text-sm text-gray-700 dark:text-gray-300">{desc}</div>
        </div>
        <div className="flex items-center gap-6">
          <div className="flex items-center gap-2">
            <div className="w-3 h-3 rounded-full bg-green-500" />
            <span className="text-xs text-gray-600 dark:text-gray-300">绿灯：对TLT有利</span>
          </div>
          <div className="flex items-center gap-2">
            <div className="w-3 h-3 rounded-full bg-red-500" />
            <span className="text-xs text-gray-600 dark:text-gray-300">红灯：对TLT不利</span>
          </div>
        </div>
      </div>
    </div>
  );
}

export default function Dashboard() {
  const { anchors } = data;
  return (
    <div className="min-h-screen w-full bg-gradient-to-b from-gray-50 to-white dark:from-zinc-950 dark:to-zinc-900 p-6 sm:p-10">
      <div className="max-w-6xl mx-auto space-y-6">
        {/* 顶部锚信息 */}
        <div className="rounded-2xl border border-gray-200 dark:border-gray-800 p-5 bg-white/80 dark:bg-zinc-900/80 shadow-sm">
          <div className="flex flex-wrap items-end justify-between gap-4">
            <div>
              <h1 className="text-2xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100">
                长期国债收益率 Dashboard（硬编码示例）
              </h1>
              <p className="text-sm text-gray-600 dark:text-gray-400 mt-1">
                数据为硬编码示例，仅用于结构演示；后续可接入数据源与自动更新。
              </p>
            </div>
            <div className="grid grid-cols-3 gap-3">
              <div className="rounded-xl bg-gray-50 dark:bg-zinc-800 p-3 text-center">
                <div className="text-xs text-gray-500 dark:text-gray-400">20Y 名义利率</div>
                <div className="text-lg font-bold text-gray-900 dark:text-gray-100">{anchors.y20Nominal.toFixed(2)}%</div>
              </div>
              <div className="rounded-xl bg-gray-50 dark:bg-zinc-800 p-3 text-center">
                <div className="text-xs text-gray-500 dark:text-gray-400">20Y 实际利率 (TIPS)</div>
                <div className="text-lg font-bold text-gray-900 dark:text-gray-100">{anchors.y20TIPS.toFixed(2)}%</div>
              </div>
              <div className="rounded-xl bg-gray-50 dark:bg-zinc-800 p-3 text-center">
                <div className="text-xs text-gray-500 dark:text-gray-400">20Y 隐含通胀</div>
                <div className="text-lg font-bold text-gray-900 dark:text-gray-100">{anchors.breakeven20y.toFixed(2)}%</div>
              </div>
            </div>
          </div>
        </div>

        {/* 综合结论 */}
        <SummaryBar />

        {/* 四个模块卡片 */}
        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
          {data.modules.map((m) => (
            <Card key={m.key} title={m.title} light={m.light as any} bullets={m.bullets} metrics={m.metrics} />
          ))}
        </div>

        {/* 备注 */}
        <div className="text-xs text-gray-500 dark:text-gray-400 pt-2">
          注：红/绿灯为定性判断示例；实际使用请以接入的实时/官方数据计算打分并生成结论。
        </div>
      </div>
    </div>
  );
}
